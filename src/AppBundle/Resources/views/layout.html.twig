<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>MyProjectManagement</title>

    <!-- CSS -->
    {% stylesheets
        'bundles/app/css/bootstrap.min.css'
        'bundles/app/css/font-awesome.min.css'
        'bundles/app/css/app.css'
    output="css/app.css"
    filter="cssrewrite" %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>

</head>

<body>
<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><span class="fa fa-tachometer"></span> Project Management</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li{% if app.request.get('_route') == 'homepage' %} class="active"{% endif %}><a href="{{ path('homepage') }}">Dashboard</a></li>
                <li{% if app.request.get('_route') == 'project' %} class="active"{% endif %}><a href="{{ path('project') }}">Projects</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li{% if app.request.get('_route') == 'project_new' %} class="active"{% endif %}><a href="{{ path('project_new') }}"><span class="fa fa-plus"></span> New Project</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div id="systemMessages">
                <!-- Success -->
                <div id="systemMessageSuccess" class="alert alert-success{% if not app.session.flashbag.has('success') %} hidden{% endif %}">
                    <strong><span class="fa fa-check"></span> {% trans %}Success{% endtrans %}</strong><br>
                    {% if app.session.flashbag.has('success') %}
                        {% for flashMessage in app.session.flashbag.get('success') %}
                            {{ flashMessage }}<br>
                        {% endfor %}
                    {% endif %}
                </div>
                <!-- Errors -->
                <div id="systemMessageError" class="alert alert-danger{% if not app.session.flashbag.has('error') %} hidden{% endif %}">
                    <strong><span class="fa fa-times"></span> {% trans %}Failure{% endtrans %}</strong><br>
                    {% if app.session.flashbag.has('error') %}
                        {% for flashMessage in app.session.flashbag.get('error') %}
                            {{ flashMessage }}<br>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% block main %}{% endblock %}

</div> <!-- /container -->

<!-- Javascript -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
{% javascripts
'bundles/app/js/bootstrap.min.js'
output='js/app.js'
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
</body>
</html>
